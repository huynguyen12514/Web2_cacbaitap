@model IEnumerable<KT0720NguyenHoangQuocHuy_64130859.Models.SinhVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "TenSV", rowsPerPage: 2);
}
@using (Html.BeginForm())
{
    <label>Mã sinh viên</label>
    @Html.TextBox("maSV")
    <br />
    <br />
    <input type="submit" name="submit" value="Tìm kiếm" style="margin-left: 5px;width:100px;
background-color: blue;color:white" />
    <input type="button" name="Nhapmoi" value="Nhập mới" style="margin-left: 5px;width:100px;
background-color: blue;color:white" onclick="location.href='@Url.Action("TimKiem_64130859", "SinhVien0720_64130859/TimKiem_64130859")'" />
}
<h2>DANH SÁCH SINH VIÊN</h2>
@grid.GetHtml(
    tableStyle: "table table-bordered table-hover",
    footerStyle: "grid-footer",
    fillEmptyRows: true,
    mode: WebGridPagerModes.Numeric,
    alternatingRowStyle: "alternatingRowStyle",
      columns: new[]  // colums in grid
     {
 grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
grid.Column("MaSV","Mã sinh viên"), //the model fields to display
grid.Column("HoSV","Họ sinh viên"  ),
grid.Column("TenSV","Tên sinh viên"),
grid.Column("GioiTinh","Giới tính",format: (@item) => @item.GioiTinh==true?"Nam":"Nữ"),
grid.Column("NgaySinh","Ngày sinh",format:@<text> @item.NgaySinh.ToString("dd/MM/yyyy")</text>),
grid.Column("AnhSV","Ảnh sinh viên"),
grid.Column("DiaChi","Địa chỉ"),
grid.Column("Lop.TenLop","Lớp"),
grid.Column(format: (item) => Html.ActionLink("Cập nhật", "Edit", "SinhVien0720_64130859",new { id = item.MaSV },"SinhVien0720_64130859Controller")),
grid.Column(format: (item) => Html.ActionLink("Xem chi tiết", "Details","SinhVien0720_64130859", new { id = item.MaSV },"SinhVien0720_64130859Controller")),
grid.Column(format: (item) => Html.ActionLink("Xóa", "Delete","SinhVien0720_64130859", new { id = item.MaSV },"SinhVien0720_64130859Controller")),
grid.Column("Chức năng", format: @<text>
    <a href="@Url.Action("Edit",
                        new { id = item.MaSV})" class="edit-btn"><abbr title="Cập nhật dữ liệu"><img src="/images/edit.png" width="20" height="20" /></abbr></a>
    <a href="@Url.Action("Details",
                        new { id = item.MaSV})" class="edit-btn"><abbr title="Xem chi tiết"><img src="/images/details.png" width="20" height="20" /></abbr></a>
    <a href="@Url.Action("Delete",
                        new { id = item.MaSV})" class="edit-btn">
        <abbr title="Xóa dữ liệu">
            <img src="/images/delete.png" width="20" height="20" />
        </abbr>
    </a>
</text>),

}
)
