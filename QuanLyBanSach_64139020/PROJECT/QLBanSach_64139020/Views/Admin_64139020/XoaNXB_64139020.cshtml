@model QLBanSach_64139020.Models.NHAXUATBAN

@{
    ViewBag.Title = "Xóa Nhà Xuất Bản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Bạn có chắc chắn muốn xóa Nhà Xuất Bản này?</h2>

<div>
    <dl class="dl-horizontal">
        <dt>Tên NXB</dt>
        <dd>@Html.DisplayFor(model => model.TenNXB)</dd>

        <dt>Địa chỉ</dt>
        <dd>@Html.DisplayFor(model => model.Diachi)</dd>

        <dt>SĐT</dt>
        <dd>@Html.DisplayFor(model => model.DienThoai)</dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Xóa" class="btn btn-default" /> |
        @Html.ActionLink("Sửa", "SuaNXB_64139020", new { id = Model.MaNXB }) |
        @Html.ActionLink("Quay lại", "NXB_64139020")
    </div>
}
