@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Đăng Nhập Quản Trị</title>
    <meta name="Designer" content="Bùi Thị Lệ Hoa" />
    <meta name="Author" content="Bùi Thị Lệ Hoa - 64139020" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f7f9fc;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            background: white;
            padding: 30px 40px;
            border-radius: 8px;
            box-shadow: 0 8px 20px rgb(0 0 0 / 0.1);
            width: 100%;
            max-width: 420px;
        }

        .btn-block {
            width: 100%;
        }

        footer {
            margin-top: 30px;
            text-align: center;
            font-size: 0.9rem;
            color: #777;
        }

            footer a {
                color: #0d6efd;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        .form-label {
            font-weight: 600;
        }

        .error-text {
            font-size: 0.875rem;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("Login_64139020", "Admin_64139020", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="login-container">
            <h3 class="text-center mb-4">Đăng Nhập Quản Trị</h3>

            <div class="mb-3">
                <label for="username" class="form-label">Tên Đăng Nhập</label>
                <input type="text" name="username" id="username" class="form-control" placeholder="Tên đăng nhập" autofocus />
                <span class="text-danger error-text">@ViewData["Loi1"]</span>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Mật Khẩu</label>
                <input type="password" name="password" id="password" class="form-control" placeholder="************" />
                <span class="text-danger error-text">@ViewData["Loi2"]</span>
            </div>

            <div class="mb-3 text-center text-danger fw-semibold">
                @ViewBag.Thongbao
            </div>

            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="remember" name="remember" />
                <label class="form-check-label" for="remember">Lưu phiên đăng nhập</label>
            </div>

            <button type="submit" class="btn btn-primary btn-block mb-3">Đăng Nhập</button>

            <div class="d-flex justify-content-between">
                @Html.ActionLink("Trở lại", "Index_64139020", "QLBanSach_64139020", null, new { @class = "text-decoration-none" })
                @Html.ActionLink("Quên mật khẩu?", "#", null, new { @class = "text-decoration-none" })
            </div>
        </div>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
