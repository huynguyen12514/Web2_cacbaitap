@using QLBanSach_64139020.Models
@model List<Giohang_64139020>

@{
    ViewBag.Title = "Giỏ Hàng";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
    }

    th, td {
        text-align: center;
        border: 1px solid #ccc;
        padding: 10px;
        vertical-align: middle;
    }

    th {
        background-color: #f8f8f8;
        font-weight: bold;
    }

    #imggh {
        width: 100px;
        height: 150px;
        object-fit: cover;
    }

    .btn {
        padding: 6px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn-link {
        color: #007bff;
        text-decoration: none;
    }

        .btn-link:hover {
            text-decoration: underline;
        }

    h2 {
        text-align: center;
        margin-top: 20px;
    }

    tfoot td {
        font-weight: bold;
        background-color: #f1f1f1;
    }

    .text-right {
        text-align: right;
    }

    .empty-cart {
        text-align: center;
        padding: 40px;
    }

        .empty-cart img {
            width: 200px;
            margin-bottom: 20px;
        }

        .empty-cart .btn {
            margin-top: 10px;
        }
</style>

<h2>@ViewBag.Title</h2>

@if (Model == null || !Model.Any())
{
    <div class="empty-cart">
        <img src="~/images/empty-cart.png" alt="Giỏ hàng trống" />
        <p class="text-danger">@ViewBag.ThongBao</p>
        <a href="@Url.Action("Index_64139020", "BookStore_64139020")" class="btn btn-primary">Tiếp tục mua sắm</a>
    </div>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Tên Sách</th>
                <th>Ảnh Bìa</th>
                <th>Số Lượng</th>
                <th>Đơn Giá</th>
                <th>Thành Tiền</th>
                <th colspan="3">Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.sTensach</td>
                    <td>
                        <img id="imggh" src="@Url.Content("~/images/anhsp/" + item.sAnhbia)" alt="@item.sTensach" />
                    </td>
                    <td>
                        @using (Html.BeginForm("CapnhatGiohang_64139020", "Giohang_64139020", new { iMaSP = item.iMasach }, FormMethod.Post))
                        {
                            <input type="number" name="txtSoluong" min="1" value="@item.iSoluong" style="width: 60px; text-align: center;" />
                            <br />
                            <input type="submit" class="btn btn-success mt-2" value="Cập Nhật" />
                        }
                    </td>
                    <td>@String.Format("{0:#,##0}", item.dDonggia)</td>
                    <td>@String.Format("{0:#,##0}", item.dThanhtien)</td>
                    <td>
                        <a class="btn-link" href="@Url.Action("Xemsach_64139020", "BookStore_64139020", new { id = item.iMasach })">Chi tiết</a>
                    </td>
                    <td>
                        @Html.ActionLink("Xóa", "XoaGiohang_64139020", new { iMaSP = item.iMasach }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-right">Tổng số lượng:</td>
                <td colspan="4" class="text-left">@ViewBag.Tongsoluong</td>
            </tr>
            <tr>
                <td colspan="4" class="text-right">Tổng tiền:</td>
                <td colspan="4" class="text-left">@String.Format("{0:#,##0}", ViewBag.Tongtien) VNĐ</td>
            </tr>
            <tr>
                <td colspan="8" class="text-right">
                    @Html.ActionLink("Xóa Giỏ Hàng", "XoaTatcaGiohang_64139020", null, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Đặt Hàng", "DatHang_64139020", "Giohang_64139020", null, new { @class = "btn btn-success ml-2" })
                </td>
            </tr>
        </tfoot>
    </table>
}
