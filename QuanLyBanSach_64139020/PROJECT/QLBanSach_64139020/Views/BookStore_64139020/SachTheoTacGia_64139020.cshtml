@using QLBanSach_64139020.Models
@using PagedList.Mvc
@model PagedList.PagedList<SACH>

@{
    ViewBag.Title = "Sách theo tác giả";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h3 class="text-center my-4">Sách theo tác giả</h3>

<div class="row">
    @foreach (var sach in Model)
    {
        <div class="col-xl-3 col-lg-4 col-md-4 col-12 mb-4">
            <div class="card h-100 text-center border shadow-sm p-2">
                <a href="@Url.Action("Xemsach_64139020", "BookStore_64139020", new { id = sach.Masach })">
                    <img src="~/images/anhsp/@sach.Anhbia" class="card-img-top img-fluid" alt="@sach.Tensach" />
                </a>
                <div class="card-body">
                    <h5 class="card-title text-truncate">@sach.Tensach</h5>
                    <p class="card-text text-danger fw-bold">
                        @if (sach.Soluongton > 0)
                        {
                            <span>@String.Format("{0:#,##0}", sach.Giaban)</span> <span>VNĐ</span>
                        }
                        else
                        {
                            <span class="text-muted">Hết hàng</span>
                        }
                    </p>
                </div>
                <div class="card-footer bg-transparent border-0">
                    @if (sach.Soluongton != 0 && sach.Soluongton != null)
                    {
                        <div class="text-center mt-3">
                            <form action="@Url.Action("ThemGiohang_64139020", "GioHang_64139020")" method="get" class="d-inline-block">
                                <input type="hidden" name="iMasach" value="@sach.Masach" />
                                <input type="hidden" name="strURL" value="@Request.Url.ToString()" />
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fas fa-shopping-cart me-2"></i> Thêm vào giỏ
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

<div class="Trang mt-4 text-center">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("SachTheoTacGia", new { page = page, id = Request.RequestContext.RouteData.Values["id"] }))
</div>
