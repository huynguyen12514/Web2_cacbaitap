@using QLBanSach_64139020.Models
@model List<QLBanSach_64139020.Models.SACH>

@{
    ViewBag.Title = "Index_64139020";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div id="mainCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/slide1.png" class="d-block w-100 slide-img" alt="Slide 1">
        </div>
        <div class="carousel-item">
            <img src="~/images/slide2.jpg" class="d-block w-100 slide-img" alt="Slide 2">
        </div>
        <div class="carousel-item">
            <img src="~/images/sldie3.png" class="d-block w-100 slide-img" alt="Slide 3">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </button>
</div>


<h3 class="text-center mb-4">Sách mới cập nhật</h3>

<div class="horizontal-scroll-wrapper">
    @foreach (var sach in Model)
    {
        <div class="single-product">
            <div class="product-img">
                <a href="@Url.Action("Xemsach_64139020", "BookStore_64139020", new { id = sach.Masach })">
                    <img class="default-img" src="~/images/anhsp/@sach.Anhbia" alt="@sach.Tensach" />
                </a>
            </div>
            <div class="product-content text-center">
                <h5><a href="@Url.Action("Xemsach_64139020", "BookStore_64139020", new { id = sach.Masach })">@sach.Tensach</a></h5>
                <div class="product-price">
                    @if (sach.Soluongton != 0 && sach.Soluongton != null)
                    {
                        <span>@String.Format("{0:#,##0}", sach.Giaban) VNĐ</span>
                    }
                    else
                    {
                        <span class="text-danger">Hết hàng</span>
                    }
                </div>
                @if (sach.Soluongton != 0 && sach.Soluongton != null)
                {
                    <div class="text-center mt-3">
                        <form action="@Url.Action("ThemGiohang_64139020", "GioHang_64139020")" method="get" class="d-flex align-items-center gap-2 mt-3">
                            <input type="hidden" name="iMasach" value="@sach.Masach" />
                            <input type="hidden" name="strURL" value="@Request.Url.ToString()" />
                            <input type="hidden" name="soluong" value="1" />
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="fas fa-shopping-cart me-2"></i> Thêm vào giỏ hàng
                            </button>
                        </form>
                    </div>


                }
            </div>
        </div>
    }
</div>
