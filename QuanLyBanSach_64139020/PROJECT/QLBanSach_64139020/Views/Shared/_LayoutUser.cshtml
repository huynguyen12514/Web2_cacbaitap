
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Bookstore</title>

    <link rel="icon" type="image/png" href="~/images/favicon.png">
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link rel="stylesheet" href="~/Content/magnific-popup.min.css">
    <link rel="stylesheet" href="~/Content/font-awesome.css">
    <link rel="stylesheet" href="~/Content/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/Content/themify-icons.css">
    <link rel="stylesheet" href="~/Content/niceselect.css">
    <link rel="stylesheet" href="~/Content/animate.css">
    <link rel="stylesheet" href="~/Content/flex-slider.min.css">
    <link rel="stylesheet" href="~/Content/owl-carousel.css">
    <link rel="stylesheet" href="~/Content/slicknav.min.css">
    <link rel="stylesheet" href="~/Content/reset.css">
    <link rel="stylesheet" href="~/Content/responsive.css">
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/themify-icons/0.1.2/css/themify-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/Content/User.css" rel="stylesheet" />
</head>
<body>

    <!-- BANNER -->
    <div class="top-banner">
        <img src="~/images/banner.png" alt="Banner BookStore" class="banner-img" />
    </div>

    <!-- HEADER -->
    <header class="shadow-sm border-bottom bg-white sticky-top">
        <div class="container d-flex justify-content-between align-items-center py-2">
            <a href="@Url.Action("Index_64139020", "BookStore_64139020")" class="navbar-brand d-flex align-items-center">
                <img src="~/images/logo.png" alt="Logo" height="40" class="me-2">
                <span class="fw-bold text-primary fs-5">BookStore</span>
            </a>
            <form class="d-flex w-50" method="get" action="@Url.Action("TimKiemSach_64139020", "BookStore_64139020")">
                <input class="form-control me-2" type="search" name="keyword" placeholder="Tìm sách, tác giả, NXB..." />
                <button class="btn btn-outline-primary" type="submit">
                    <i class="bi bi-search"></i>
                </button>
            </form>

            <div class="d-flex align-items-center">
                <a href="@Url.Action("Giohang_64139020", "Giohang_64139020")" class="btn btn-light position-relative me-3">
                    <i class="bi bi-cart"></i>
                    @if (ViewBag.Tongsoluong != null)
                    {
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">@ViewBag.Tongsoluong</span>
                    }
                </a>
                @if (Session["Taikhoan"] == null)
                {
                    <a href="@Url.Action("Dangnhap_64139020", "Nguoidung_64139020")" class="btn btn-outline-secondary me-2">Đăng nhập</a>
                    <a href="@Url.Action("Dangky_64139020", "Nguoidung_64139020")" class="btn btn-primary">Đăng ký</a>
                }
                else
                {
                    <div class="dropdown">
                        <a href="#" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle me-1"></i>@Session["TDN"]
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("ThongTinTaiKhoan_64139020", "BookStore_64139020")">
                                    Thông tin tài khoản
                                </a>
                            </li>

                            <li>
                                <a class="dropdown-item text-danger" href="@Url.Action("Thoat_64139020", "BookStore_64139020")">
                                    Đăng xuất
                                </a>
                            </li>
                        </ul>

                    </div>
                }
            </div>
        </div>

        <!-- NAVIGATION -->
        <nav class="bg-light border-top">
            <div class="container">
                <ul class="nav justify-content-between">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index_64139020","BookStore_64139020")">Trang chủ</a></li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="dropdownLoaiSach" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Loại sách
                        </a>
                        <ul class="dropdown-menu multi-column-dropdown" aria-labelledby="dropdownLoaiSach">
                            @Html.Action("Loaisach_64139020", "BookStore_64139020")
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="dropdownNXB" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Nhà xuất bản
                        </a>
                        <ul class="dropdown-menu p-3" aria-labelledby="dropdownNXB">
                            <li style="width: 100%;">
                                @Html.Action("Nhaxuatban_64139020", "BookStore_64139020")
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="dropdownTG" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Tác giả
                        </a>
                        <ul class="dropdown-menu p-3" aria-labelledby="dropdownTG">
                            <li style="width: 100%;">
                                @Html.Action("Tacgia_64139020", "BookStore_64139020")
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item"><a class="nav-link" href="#">Sách cũ</a></li>
                    <li class="nav-item"><a class="nav-link" href="hoitro.html">Hỗ trợ</a></li>
                </ul>
            </div>
        </nav>

    </header>

    <!-- CONTENT -->
    <main class="container my-4">
        @RenderBody()
    </main>
    <!--SECTION-->
    <section class="shop-services section home">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-12">
                    <!-- Start Single Service -->
                    <div class="single-service">
                        <i class="bi bi-rocket"></i>
                        <h4>Free shiping</h4>
                        <p>Với đơn hàng trên 200.000VNĐ</p>
                    </div>
                    <!-- End Single Service -->
                </div>
                <div class="col-lg-3 col-md-6 col-12">
                    <!-- Start Single Service -->
                    <div class="single-service">
                        <i class="bi bi-arrow-repeat "></i>
                        <h4>Miễn Phí Đổi Trả</h4>
                        <p>Đổi hàng khi bị lỗi</p>
                    </div>
                    <!-- End Single Service -->
                </div>
                <div class="col-lg-3 col-md-6 col-12">
                    <!-- Start Single Service -->
                    <div class="single-service">
                        <i class="bi bi-lock"></i>
                        <h4>Bảo Mật</h4>
                        <p>Bảo mật giao hàng</p>
                    </div>
                    <!-- End Single Service -->
                </div>
                <div class="col-lg-3 col-md-6 col-12">
                    <!-- Start Single Service -->
                    <div class="single-service">
                        <i class="bi bi-tag"></i>
                        <h4>Siêu Tiết Kiệm</h4>
                        <p>Mua hàng giá rẻ</p>
                    </div>
                    <!-- End Single Service -->
                </div>
            </div>
        </div>
    </section>
    <section class="shop-newsletter section">
        <div class="container">
            <div class="inner-top">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2 col-12">
                        <!-- Start Newsletter Inner -->
                        <div class="inner">
                            <h4>Nhận thông báo khi có sách mới:</h4>
                            <form asp-controller="BookStore_64139020" asp-action="DangKyEmail" method="post" class="newsletter-inner d-flex">
                                <input name="email" placeholder="Địa chỉ Email của bạn ..." required type="email" class="form-control me-2" />
                                <button type="submit" class="btn btn-primary">Đăng Ký</button>
                            </form>
                        </div>
                        <!-- End Newsletter Inner -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- FOOTER -->
    <footer class="py-3 mt-auto shadow-sm">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-10 d-flex justify-content-between flex-wrap">
                    <div>
                        <h5>Về chúng tôi</h5>
                        <ul class="list-unstyled">
                            <li><a href="#">About Us</a></li>
                            <li><a href="#">Faq</a></li>
                            <li><a href="#">Terms & Conditions</a></li>
                            <li><a href="#">Contact Us</a></li>
                            <li><a href="#">Help</a></li>
                        </ul>
                    </div>
                    <div>
                        <h5>Dịch vụ</h5>
                        <ul class="list-unstyled">
                            <li><a href="#">Payment Methods</a></li>
                            <li><a href="#">Money-back</a></li>
                            <li><a href="#">Returns</a></li>
                            <li><a href="#">Shipping</a></li>
                            <li><a href="#">Privacy Policy</a></li>
                        </ul>
                    </div>
                    <div>
                        <h5>Thông tin</h5>
                        <ul class="list-unstyled">
                            <li>Số 2 Nguyễn Đình Chiểu, Nha Trang, Khánh Hòa</li>
                            <li>Chủ Trang: Bùi Thị Lệ Hoa</li>
                            <li><a href="#">Email: hoa.btl.64ttql@ntu.edu.vn</a></li>
                            <li><a href="#">+012 3456 7890</a></li>
                        </ul>
                        <div class="mt-2">
                            <a href="#" class="text-dark me-2"><i class="bi bi-facebook"></i></a>
                            <a href="#" class="text-dark me-2"><i class="bi bi-twitter"></i></a>
                            <a href="#" class="text-dark me-2"><i class="bi bi-flickr"></i></a>
                            <a href="#" class="text-dark me-2"><i class="bi bi-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <small>&copy; 2025 Book Store | <a href="https://www.facebook.com/Hoabuiii04" target="_blank">Bùi Thị Lệ Hoa</a></small>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
