@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "TenTS", rowsPerPage: 2);
}

Nhập tên tài sản cần tìm
@using (Html.BeginForm())
{
    <input type="text" name="TenTS" />
    <input type="submit" name="submit" value="Tìm kiếm" style="margin-left: 5px;width:100px;
background-color: blue;color:white" />
    <input type="button" name="Nhapmoi" value="Nhập mới" style="margin-left: 5px;width:100px;
background-color: blue;color:white" onclick="location.href='@Url.Action("TimKiem", "TaiSans_64130859/TimKiem")'" />
}

@grid.GetHtml(
    tableStyle: "table table-bordered table-hover",
    footerStyle: "grid-footer",
    fillEmptyRows: true,
    mode: WebGridPagerModes.Numeric,
    alternatingRowStyle: "alternatingRowStyle",
      columns: new[]  // colums in grid
     {
 grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
grid.Column("MaTS","Mã tài sản"), //the model fields to display
grid.Column("TenTS","Tên tài sản"),
grid.Column("DVT","Đơn vị tính"),
grid.Column("XuatXu","Xuất xứ",format: (@item) => @item.XuatXu==true?"Trong nước":"Ngoài nước"),
grid.Column("DonGia","Đơn giá"),
grid.Column("AnhMH","Ảnh mặt hàng"),
grid.Column("GhiChu","Ghi chú"),
grid.Column("LoaiTaiSan.TenLTS","Loại tài sản"),
grid.Column(format: (item) => Html.ActionLink("Xóa", "Delete","TaiSans_64130859", new { id = item.MaTS },"TaiSans_64130859Controller")),
}
)